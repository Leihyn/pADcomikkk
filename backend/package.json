{
  "name": "comic-pad-backend",
  "version": "1.0.0",
  "description": "Backend API for Comic Pad - Decentralized Comic NFT Marketplace",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:hedera": "node tests/hedera.test.js",
    "test:ipfs": "node tests/ipfs.test.js",
    "test:workflow": "node tests/test-workflow.js",
    "check-env": "node check-env.js",
    "verify": "node check-env.js && node tests/test-workflow.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "setup": "npm install && node check-env.js"
  },
  "keywords": [
    "hedera",
    "nft",
    "comics",
    "ipfs",
    "blockchain"
  ],
  "author": "Comic Pad Team",
  "license": "MIT",
  "dependencies": {
    "@hashgraph/sdk": "^2.38.0",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.4",
    "web3.storage": "^4.5.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
